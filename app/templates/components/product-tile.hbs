{{#if login.seller}}
<div class='col-xs-12'>
  <button {{action 'productFormShow'}} class="btn inline"><i class="fa fa-pencil" aria-hidden="true"></i></button>
</div>
{{#each product as |product|}}
  <div class='col-xs-3 text-center '>
    <div class='shopProductDiv'>
      <img class='shopProduct'src = "{{product.image}}" />
    </div>
    <div style='height: 70px;'>
      {{product.name}}<br />
      $ {{product.price}}
    </div>
      {{#if productFormShow}}

      <div class='text-center'>
        <form>
            {{input value=product.barcode placeholder=product.barcode}}<br />
            {{input value=product.name placeholder=product.name}}<br />
            {{input value=product.brand placeholder=product.brand}}<br />
            {{input value=product.description placeholder=product.description}}<br />
            {{input value=product.price placeholder=product.price}}<br />
            {{input value=product.image placeholder=product.image}}<br />
            <button {{action 'update' product}} class="btn">Save</button>
            <button {{action 'destroyProduct' product}} class="btn inline"><i class="fa fa-times" aria-hidden="true"></i></button>
        </form>


      </div>
      {{/if}}
      <!-- {{update-product product=product update="update"}} -->
  </div>
  {{/each}}
{{/if}}
