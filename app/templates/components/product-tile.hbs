{{#if login.seller}}
<div class='col-xs-12'>
  <button {{action 'productFormShow'}} class="btn inline"><i class="fa fa-pencil" aria-hidden="true"></i></button>
</div>
{{#each product as |product|}}
  <div class='col-xs-3 text-center'>
      <img src = "{{product.image}}" />
      {{product.name}}<br />
      $ {{product.price}}
      {{#if productFormShow}}
      <h4>Edit Product</h4>

      <div class='text-center'>
        <form>
            {{input value=barcode id="barcode" placeholder=product.barcode}}<br />
            {{input value=name id="name" placeholder=product.name}}<br />
            {{input value=brand id="brand" placeholder=product.brand}}<br />
            {{input value=description id="description" placeholder=product.description}}<br />
            {{input value=price id="price" placeholder=product.price}}<br />
            {{input value=image id="image" placeholder=product.image}}<br />
          <button {{action 'update' product}} class="btn">Save</button>
          <button {{action 'destroyProduct' product}} class="btn inline"><i class="fa fa-times" aria-hidden="true"></i></button>
        </form>
      </div>
      {{/if}}
      <!-- {{update-product product=product update="update"}} -->
  </div>
  {{/each}}
{{/if}}
