{{#if login.seller}}
  <h1>{{product.name}}</h1>

  <hr>

  <img src={{product.image}} alt={{product.title}}>

  <h2>{{product.description}}</h2>

  {{update-product product=product update="update"}}

  <button {{action 'destroyProduct' product}} class="btn btn-danger">Delete Product</button>
  <br>
{{/if}}
