{{#if productFormShow}}
<h4>Edit Product</h4>
<div>
  <form>

    <div class="form-group">
      <label for="barcode">Barcode no.:</label>
      {{input value=barcode id="barcode" placeholder=product.barcode}}
    </div>

    <div class="form-group">
      <label for="name">Product name:</label>
      {{input value=name id="name" placeholder=product.name}}
    </div>

    <div class="form-group">
      <label for="brand">Product brand:</label>
      {{input value=brand id="brand" placeholder=product.brand}}
    </div>

    <div class="form-group">
      <label for="description">Product description:</label>
      {{input value=description id="description" placeholder=product.description}}
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      {{input value=price id="price" placeholder=product.price}}
    </div>

    <div class="form-group">
      <label for="image">Imge URL:</label>
      {{input value=image id="image" placeholder=product.image}}
    </div>

    <button {{action 'update' product}} class="btn btn-warning">Save</button>
  </form>
</div>
{{else}}
<button {{action 'productFormShow'}} class="btn btn-warning">Update</button>
{{/if}}
