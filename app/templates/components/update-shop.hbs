{{#if shopFormShow}}
<h4>Update Store Details</h4>
<div>
  <form>

    <div class="form-group">
      <label for="shopname">Store Name:</label>
      {{input value=shopname id="shopname" placeholder=shop.shopname}}
    </div>

    <div class="form-group">
      <label for="location">Store location</label>
      {{input value=location id="location" placeholder=shop.location}}
    </div>

    <div class="form-group">
      <label for="description">Store Description:</label>
      {{input value=description id="description" placeholder=shop.description}}
    </div>

    <div class="form-group">
      <label for="promotion">Store Promotions:</label>
      {{input value=promotion id="promotion" placeholder=shop.promotion}}
    </div>

    <div class="form-group">
      <label for="photo">Upload photos:</label>
      {{input value=photo id="photo" placeholder=shop.photo}}
    </div>

    <button {{action 'update' shop}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'shopFormShow'}}>Update</button>
{{/if}}
